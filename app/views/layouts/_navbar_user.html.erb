


<div class="d-flex flex-column flex-shrink-0 p-3 navbar navbar-expand-sm navbar-light" style="width: 280px;">
  <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/a/a5/Instagram_icon.png" %>
    <% end %>
    <span class="fs-4">Instagram</span>
  </a>
  <hr>
  <ul class="nav nav-pills flex-column mb-auto">
    <li class="nav-item">
      <%= link_to "Home", root_path, class: "nav-link link-dark"%>
    </li>
    <li class="nav-item">
      <%= link_to "Dashboard", dashboard_path, class: "nav-link link-dark" %>
    </li>
    <li class="nav-item">
      <%= link_to "New Post", new_post_path, class: "nav-link link-dark" %>
    </li>
    <li class="nav-item">
      <%= link_to profile_path(current_user.username), class: "nav-link link-dark" do %>
        <%= cl_image_tag current_user.avatar.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        Profile
      <% end %>
    </li>
    <hr>
    <li class="nav-item dropdown">
      <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
        <%= link_to "Action", "#", class: "dropdown-item" %>
        <%= link_to "Another action", "#", class: "dropdown-item" %>
        <%= link_to "Log out", "#", class: "dropdown-item", data: {turbo_method: :delete} %>
      </div>
    </li>
  </ul>
</div>
